<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ticketbooking"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.CardView
        android:layout_width="106dp"
        android:layout_height="114dp"
        android:id="@+id/wescard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094"
        android:background="@color/colorPrimary"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="normalbooking">


        <ImageView
            android:id="@+id/wes"
            android:layout_width="106dp"
            android:layout_height="68dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/colorAccent2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.059"
            app:srcCompat="@drawable/bookingt"
            tools:srcCompat="@drawable/bookingt" />

        <TextView
            android:layout_width="106dp"
            android:layout_height="85dp"
            android:layout_marginTop="68dp"
            android:background="@color/colorAccent2"
            android:text="Normal Booking"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="106dp"
        android:layout_height="114dp"
        android:id="@+id/cencard"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382"
        android:clickable="true">

        <ImageView
            android:id="@+id/cen"
            android:layout_width="106dp"
            android:layout_height="64dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/colorAccent2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.059"
            app:srcCompat="@drawable/platform"
            tools:srcCompat="@drawable/platform" />

        <TextView
            android:layout_width="106dp"
            android:layout_height="47dp"
            android:layout_marginTop="68dp"
            android:background="@color/colorAccent2"
            android:text="Platform Booking"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="106dp"
        android:layout_height="114dp"
        android:background="@color/colorPrimary"
        android:id="@+id/harcard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.679"
        android:clickable="true">

        <ImageView
            android:id="@+id/har"
            android:layout_width="106dp"
            android:layout_height="72dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/colorAccent2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.059"
            app:srcCompat="@drawable/season"
            tools:srcCompat="@drawable/season" />

        <TextView
            android:layout_width="106dp"
            android:layout_height="47dp"
            android:layout_marginTop="72dp"
            android:background="@color/colorAccent2"
            android:text="Season Ticket"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />
    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>